(deftemplate Modulo
  (slot nombre
    (type SYMBOL)
    (allowed-symbols ramas asignaturas)
  )
)

(defrule seleccion
  (declare (salience 10000))
  (not (Modulo (nombre ?)))
  =>
  (printout t "Sobre que quiere una recomendacion? Introduzca ramas asignaturas o null para terminar" crlf)
  (assert (Modulo (nombre (read))))
)

(defrule terminar_modulo
  (declare (salience -1000))
  ?f <- (Modulo (nombre ?nombre))
  (test (neq ?nombre null))
  =>
  (retract ?f)
)

